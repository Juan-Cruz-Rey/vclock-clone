const locale = 'it';

const hourNum = parseInt(hour || '7');
const minuteNum = parseInt(minute || '0');
const meridianUpper = (meridian || 'am').toUpperCase() as 'AM' | 'PM';

const timeString = `${hour}:${minute} ${meridianUpper}`;
const title = `Imposta Sveglia per ${timeString} - Sveglia Online`;
const description = `Imposta una sveglia gratuita per ${timeString}. Svegliati in orario con la nostra sveglia affidabile. Nessuna registrazione richiesta, funziona nel tuo browser.`;
const keywords = `imposta sveglia per ${timeString}, sveglia ${hour}${meridian}, svegliarsi alle ${timeString}, sveglia online ${timeString}`;
