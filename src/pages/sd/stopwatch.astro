---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Stopwatch from '../../components/stopwatch/Stopwatch.astro';
import { t } from '../../scripts/i18n';

const locale = 'sd';
const title = t(locale, 'meta.stopwatch.title');
const description = t(locale, 'meta.stopwatch.description');
---

<BaseLayout title={title} description={description}>
  <div class="container mx-auto px-4 py-12">
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
        {t(locale, 'stopwatch.title')}
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        {t(locale, 'stopwatch.description')}
      </p>
    </div>

    <Stopwatch />
  </div>
</BaseLayout>
