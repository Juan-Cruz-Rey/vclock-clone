---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AlarmClock from '../../components/alarm/AlarmClock.astro';
import { t } from '../../scripts/i18n';

const locale = 'zh-HK';
const title = t(locale, 'meta.home.title');
const description = t(locale, 'meta.home.description');
---

<BaseLayout title={title} description={description}>
  <div class="container mx-auto px-4 py-6 lg:py-12">
    <!-- Alarm Clock Component -->
    <AlarmClock />

    <div class="text-center mt-8 lg:mt-12">
      <h1 class="text-3xl lg:text-4xl xl:text-5xl font-bold text-gray-900 dark:text-white mb-3 lg:mb-4">
        {t(locale, 'alarm.title')}
      </h1>
      <p class="text-base lg:text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto px-2">
        {t(locale, 'alarm.description')}
      </p>
    </div>
  </div>
</BaseLayout>
