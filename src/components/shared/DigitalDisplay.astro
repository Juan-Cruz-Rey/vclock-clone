---
/**
 * Digital Display Component
 * Display digital estilo reloj usado en todas las herramientas
 */

interface Props {
  id?: string;
  time: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
  showDate?: boolean;
  date?: string;
  class?: string;
}

const {
  id = 'digital-display',
  time,
  size = 'lg',
  showDate = false,
  date,
  class: className = ''
} = Astro.props;

const sizeClasses = {
  sm: 'text-xl sm:text-2xl md:text-4xl',
  md: 'text-2xl sm:text-3xl md:text-6xl',
  lg: 'text-3xl sm:text-4xl md:text-6xl lg:text-8xl',
  xl: 'text-4xl sm:text-5xl md:text-7xl lg:text-9xl'
};
---

<div
  id={id}
  class={`digital-display ${sizeClasses[size]} ${className}`}
  data-time={time}
>
  <div class="flex flex-col items-center">
    <!-- Main Time Display -->
    <div class="tabular-nums tracking-wider">
      {time}
    </div>

    <!-- Optional Date Display -->
    {showDate && date && (
      <div class="text-xs sm:text-sm md:text-base lg:text-lg mt-1 md:mt-2 font-mono text-gray-500 dark:text-gray-400">
        {date}
      </div>
    )}
  </div>
</div>

<style>
  /* Asegurar que los n√∫meros tengan ancho fijo */
  .tabular-nums {
    font-variant-numeric: tabular-nums;
  }
</style>
